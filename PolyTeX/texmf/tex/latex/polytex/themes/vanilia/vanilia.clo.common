\newcommand{\titlePage}[5]{%
\par\noindent\vfill
\rlap{\hfill\setlength{\fboxsep}{1cm}%
\parbox[b][\textheight]{\textwidth}{%
\begin{flushright}
{\chapterHeaderFont\huge #1}%
\smallskip
\hrule
\end{flushright}
\vfill
\begin{flushright}
{\chapterHeaderFont\itshape\Large #2}
\vfill
{\chapterHeaderFont\Large #3}
\end{flushright}
\vfill
\begin{flushright}
{\chapterHeaderFont\Large #4}
\end{flushright}
\vfill
{\begin{center}\chapterHeaderFont\itshape{#5}\end{center}}
\vfill
\begin{flushright}
\hrule\smallskip
\tocFont\itshape\theDate
\end{flushright}
\ifPrint{}{%
   \begin{center}
   \hyperlink{tableOfContents}{\large\ensuremath{\boldsymbol{\bigtriangledown}}}
   \end{center}
}
}\hfill}
\vfill
\requireNewPageAfter%
\clearpage%
}

\newcommand{\oldtitlePage}[5]{%
\par\noindent\vfill
\rlap{\hfill\setlength{\fboxsep}{1cm}%
\parbox[b][\textheight]{\textwidth}{%
\begin{flushright}
{\chapterHeaderFont\LARGE #1%
\gdef\coursTitle{#1 - #5}}
\smallskip
\hrule
\end{flushright}
\vfill
\begin{flushright}
{\chapterHeaderFont\itshape\Large #2}
\vfill
{\chapterHeaderFont\Large #3}
\end{flushright}
\vfill
\begin{flushright}
{\chapterHeaderFont\Large #4}
\end{flushright}
\vfill
\begin{flushright}
\hrule\smallskip
{\chapterHeaderFont\Large\itshape{#5}}
\end{flushright}
\ifPrint{}{%
   \begin{center}
   \hyperlink{tableOfContents}{\large\ensuremath{\boldsymbol{\bigtriangledown}}}
   \end{center}
}
}\hfill}
\vfill
\requireNewPageAfter%
\clearpage%
}


