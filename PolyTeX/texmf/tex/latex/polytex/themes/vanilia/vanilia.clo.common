\newcommand{\chapterHeaderCommand}[2][@star]{%
   \ifPrint{%
      \thispagestyle{empty@print}%
      \mbox{}\par{\vspace{3.0cm}%
      \chapterHeaderFont%
      \ifthenelse{\equal{#1}{@star}}{%
         ~\bfseries\par%
       }{%
          \bfseries\flushright\chaptername\space#1\par%
       }%
       \rlap{\parbox{\textwidth}{\flushright#2}}}\par\vspace{3.0cm}%
   }{%
      \mbox{}\par{%
         \vspace{1.0cm}%
         \chapterHeaderFont%
         \ifthenelse{\equal{#1}{@star}}{%
            \mbox{}\par%
         }{%
            \flushright\chaptername\space#1\par%
         }%
         \bigskip\noindent%
	 \ifglobalNavBoxRight%
	     \rlap{\hspace{\navBox}\begin{minipage}{\textwidth}\begin{flushright}#2\end{flushright}\end{minipage}}%
	 \else%
	    \mbox{}\hfill#2%
	 \fi%
      }%
      \par\vspace{1.0cm}%
   }%
}

