\newcommand{\coursgrainHeader}[4][@star]{%
   \ifPrint{%
      \ifnewPageAfterGrain%
      	\setlength{\beforegrainlength}{1\bigskipamount}%
	\else%
	\setlength{\beforegrainlength}{2\bigskipamount}%
	\fi%
      \ifthenelse{\equal{#1}{@star}}{%
         \@startsection{\grain@section@name}{\c@grain@depth}{0pt}%
	 {\beforegrainlength}{\medskipamount}{\grainHeaderFont}*{#2}%
      }{%
         \@startsection{\grain@section@name}{\c@grain@depth}{0pt}%
	 {\beforegrainlength}{\medskipamount}{\grainHeaderFont}*{#1\space#2}%
      }%
      \ifnewPageAfterGrain\requireNewPageAfter\fi% 
   }%
   {%
      \mbox{}\par\ifgrainHeaderInGrainBox%
         \ifthenelse{\equal{#1}{@star}}{%
            \@startsection{\grain@section@name}{\c@grain@depth}%
	    {0pt}{0pt}{\bigskipamount}{\grainHeaderFont}*{#2}%
          }{%
            \@startsection{\grain@section@name}{\c@grain@depth}%
	    {0pt}{0pt}{\bigskipamount}{\grainHeaderFont}*{#1\space#2}%
          }%
      \fi%
      \gdef\grain@header{#2}%
